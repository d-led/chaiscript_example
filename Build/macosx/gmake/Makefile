# Type "make help" for usage help

ifndef config
  config=debug32
endif
export config

PROJECTS := chaiscript_stdlib chaiscript_example

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

chaiscript_stdlib: 
	@echo "==== Building chaiscript_stdlib ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f chaiscript_stdlib.make

chaiscript_example: chaiscript_stdlib
	@echo "==== Building chaiscript_example ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f chaiscript_example.make

clean:
	@${MAKE} --no-print-directory -C . -f chaiscript_stdlib.make clean
	@${MAKE} --no-print-directory -C . -f chaiscript_example.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug32"
	@echo "   release32"
	@echo "   debug64"
	@echo "   release64"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   chaiscript_stdlib"
	@echo "   chaiscript_example"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
